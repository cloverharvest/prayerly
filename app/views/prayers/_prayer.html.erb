
  <% @prayers.each do |prayer| %>
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
            <div class="col-md-4 col-xs-12 thumbnail saint-image">
              <%= image_tag prayer.image, :class => "img-responsive" %>
            </div>
            <div class="col-md-8 col-xs-12">
              <p class="list-group-item-text">
              <div>
              <%= link_to prayer_path(prayer) do %>
                <h4>Title: <%= prayer.title %></h4>
              <% end %>
             </div>
             <div>
                <strong>Text:</strong> <p style="white-space: pre-wrap"><%= prayer.text %></p><br />
             </div>
            </p>
            </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
