<div class="row">
    <div class="col-md-12">
      <div id="prayer-image-show">
      <%= image_tag @prayer.image %><br />
      </div>
      <div>
       <h4>Title: <%= @prayer.title %></h4>
      </div>
      <div>
        <strong>Text:</strong> <p style="white-space: pre-wrap"><%= @prayer.text %></p>
      </div>
    </div>
</div>

<%= link_to "Add a Prayer Intention", new_prayer_comment_path(@prayer) %>

<% if current_admin %>
  <div>
    <%= link_to "Edit prayer", edit_prayer_path %><br />
    <%= link_to "Delete prayer","/prayers/" + @prayer.id.to_s, method: :delete %><br />
    <%= link_to "See all prayers", prayers_path %><br />
  </div>
<% end %>

<h3 class="comments-header">Prayer Intentions:</h3>
  <div>
	<% @prayer.comments.each do |c| %>
		<div class="row">
      <div class="col-md-12">
        <div>
          <h4>Name:</h4>
				  <p><%= c.name %></p>
        </div>
        <div>
          <h4>Prayer Intention:</h4>
          <p><%= c.prayer_intention %></p>
        </div>
				<p class="small pull-right post-show-post-date">posted <%= time_ago_in_words(c.created_at) %> ago</p><br>
			</div>
		</div>
    <% if current_admin %>
    <%= link_to "Edit a prayer intention", '/prayers/' + @prayer.id.to_s + '/comments/' + c.id.to_s + '/edit' %><br />
    <% end %>
  <% end %>
</div>
