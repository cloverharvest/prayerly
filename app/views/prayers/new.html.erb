Prayers#new

<h2>Add a prayer</h2>

<%= form_for @prayer do |f| %>
    <div>
      <%= f.label :image %>
      <%= f.text_field :image, class:"form-control" %>
    </div>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control"%>
    </div>
    <div>
      <%= f.label :text %>
      <%= f.text_area :text, class:"form-control" %>
    </div>
    <div class="submit_button">
      <%= f.submit "Save Prayer", class: "btn btn-success" %>
    </div>
  <% end %>
