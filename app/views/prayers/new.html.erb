<div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add a prayer</h3><br />
        <%= form_for @prayer do |f| %>
           <div>
             <%= f.label :image %>
             <%= f.text_field :image, required: true, class:"form-control" %>
           </div>
           <div>
             <%= f.label :title %>
             <%= f.text_field :title, required: true, class:"form-control"%>
           </div>
           <div>
             <%= f.label :text %>
             <%= f.text_area :text, required: true, class:"form-control" %>
           </div>
           <div class="submit_button">
             <%= f.submit "Save Prayer", class: "btn btn-success" %>
           </div>
         <% end %>
       </div>
     </div>
 </div>
