<div class="col-xs-10 col-xs-offset-1">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Time to rest...</h3>
      <h3>Time to pray...</h3>
        <%= form_tag('/categories', :method=>:get) do %>
          <div>
          <%= select_tag "id", options_from_collection_for_select(Category.all, "id", "cat_name", params[:id]) %>
          </div>
          <div class="search_button">
          <%= submit_tag "Search Categories", :name => nil, class: "btn btn-primary" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
<div class="col-xs-10 col-xs-offset-1">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div>
        <% if @prayers.present? %>
          <%= render "category" %>
        <% else %>
          <p>There are no prayers containing the term(s) <%= params[:search] %>.</p>
        <% end %>
        <br />
      </div>
    </div>
  </div>
</div>
<div class="col-xs-10 col-xs-offset-1">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div>
        <% if current_admin %>
          <%= link_to "Add New Category", new_category_path %>
        <% end %>
     </div>
   </div>
 </div>
</div>
